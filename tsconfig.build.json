// Specialized tsconfig to only compile .ts-files in the src dir
{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "allowJs": false,
      "checkJs": false,
      "noEmit": false,
      "declaration": false,
      //"types": ["node", "@iobroker/types"]
      //"types": ["@types/iobroker"],
      //"typeRoots": ["./node_modules/@types"]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ]
  }